@model PetShop.Client.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal!.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animal!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal!.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animal!.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal!.Descraption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animal!.Descraption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal!.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animal!.Category!.Name)
        </dd>        
    </dl>
</div>


<div>
    <form asp-action="AddComment" >
        <input type="hidden" asp-for="Animal!.AnimalId"/>
        <textarea rows="5" cols="20" name="CommentText">may you leave a comment?</textarea>
        <input type="submit" name="submitBtn" value="submit comment" />
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Animal!.Comments)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Animal!.Comments)
            {
                <tr>
                    <td>
                        @item.CommentText
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
